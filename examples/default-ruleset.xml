<?xml version="1.0" ?>
<ruleset name="DTForce">
	<description>The DTForce coding standard.</description>

	<!-- Classes -->
	<rule ref="DTForceCodingStandard.Classes.ClassDeclaration" />
	<rule ref="DTForceCodingStandard.Classes.OneClassPerFileApartExceptions" />

	<!-- Commenting -->
	<rule ref="DTForceCodingStandard.Commenting.BlockPropertyComment" />
	<rule ref="DTForceCodingStandard.Commenting.ComponentFactoryComment" />

	<!-- Control Structures -->
	<rule ref="DTForceCodingStandard.ControlStructures.NewClass" />
	<rule ref="DTForceCodingStandard.ControlStructures.SwitchDeclaration" />
	<rule ref="DTForceCodingStandard.ControlStructures.YodaCondition" />
	<rule ref="DTForceCodingStandard.ControlStructures.WeakTypesComparisonsWithExplanation" />

	<!-- Debug -->
	<rule ref="DTForceCodingStandard.Debug.DebugFunctionCall" />

	<!-- Namespace -->
	<rule ref="DTForceCodingStandard.Namespaces.NamespaceDeclaration" />
	<rule ref="DTForceCodingStandard.Namespaces.UseDeclaration">
		<properties>
			<property name="blankLinesAfterUseStatement" value="2" />
		</properties>
	</rule>
	<rule ref="DTForceCodingStandard.Namespaces.UseInAlphabeticalOrder" />

	<!-- Naming -->
	<rule ref="DTForceCodingStandard.Naming.Bool">
		<properties>
			<property name="preferedName" value="bool" />
		</properties>
	</rule>

	<!-- Php -->
	<rule ref="DTForceCodingStandard.Php.ShortArraySyntax" />

	<!-- Scope -->
	<rule ref="DTForceCodingStandard.Scope.MethodScope" />

	<!--Whitespace -->
	<rule ref="DTForceCodingStandard.Whitespace.ConcatOperator" />
	<rule ref="DTForceCodingStandard.Whitespace.InBetweenMethodSpacing">
		<properties>
			<property name="blankLinesBetweenMethods" value="2" />
		</properties>
	</rule>
	<rule ref="DTForceCodingStandard.Whitespace.OperatorSpacing" />
	<rule ref="DTForceCodingStandard.Whitespace.PropertiesMethodsMutualSpacing">
		<properties>
			<property name="blankLinesInBetween" value="2" />
		</properties>
	</rule>
</ruleset>
